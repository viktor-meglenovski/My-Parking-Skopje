@model MyParkingSkopje.Models.Parking
@{
    ViewBag.Title = "Details";
}

<div style="margin-top:1%;">
    <div class="row" style="height:90%;">
        <div class="col-md-5 text-center" style="">
            <h1>@Model.Name</h1>
            <iframe class="frame-smaller" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d38477.39477480714!2d21.410300706719863!3d42.000699225426196!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x135415a58c9aa2a5%3A0xb2ed88c260872020!2sSkopje!5e0!3m2!1sen!2smk!4v1638644516885!5m2!1sen!2smk" style="position: relative; height: 250px; width: 90%; margin:0;" allowfullscreen="" loading="lazy"></iframe>
            <h3><a href="" style="font-weight:bold">Click</a> on the map to get directions.</h3>
            <div class="row" style="position:relative;">
                <div class="col-xs-6 text-left" style="height:50%; padding-left:50px;">
                    <h3>Lattitude: </h3>
                    <h3>Longitude: </h3>
                    <h3>Fee: </h3>
                </div>
                <div class="col-xs-6 text-right" style="padding-right:50px;">
                    <h3>@(Model.Lattitude)N</h3>
                    <h3>@(Model.Longitude)E</h3>
                    <h3>@(Model.Fee==true?"yes":"no")</h3>
                </div>
            </div>

        </div>
        <div class="col-md-7 text-center" style="padding-left:50px; padding-right:50px; height:100%;">
            <div class="green-rounded-corners" style="height:100%; margin-bottom:2%;">
                <h1>Reviews</h1>
                <div class="text-center" style="margin:auto;">
                    <table class="table table-responsive" style="width:80%; padding-left:20px;padding-right:20px; margin:auto;">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Rating</th>
                                <th>Time</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    <h3 style="margin-bottom:150px;">There are no reviews for this parking :(</h3>
                </div>
            </div>
            <div class="green-rounded-corners" style="height:40%; margin-bottom:2%; padding-bottom:50px;">
                <h1 style="margin-bottom:20px;">Write a Review</h1>
                <div class="row">
                    <div class="col-lg-6" style="padding-right:0;">
                        <textArea rows="6" style="width:100%; resize:none;" placeholder="Leave your comment here"></textArea>
                    </div>
                    <div class="col-lg-6" style="height:100%; padding-left:0;">
                        <div style="margin-bottom:30px;">
                            <img class="star-image-review" src=@Url.Content("~/Content/Images/star_empty.png") />
                            <img class="star-image-review" src=@Url.Content("~/Content/Images/star_empty.png") />
                            <img class="star-image-review" src=@Url.Content("~/Content/Images/star_empty.png") />
                            <img class="star-image-review" src=@Url.Content("~/Content/Images/star_empty.png") />
                            <img class="star-image-review" src=@Url.Content("~/Content/Images/star_empty.png") />
                        </div>
                        <a class="blue-white-button-large">Publish</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    td,th{
        text-align:center;
    }
</style>

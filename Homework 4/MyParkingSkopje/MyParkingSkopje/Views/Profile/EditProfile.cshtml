@model MyParkingSkopje.ViewModels.EditProfileViewModel
@{
    ViewBag.Title = "Edit Profile";
}
<div style="margin:0 auto;">
    <div style=" height:100vh; margin: 0 auto; margin-top:6%;">
        <div class="row text-center" style="width:100%;">
            <div class="col-xs-offset-2 col-sm-offset-3 col-md-offset-3 col-xs-8 col-sm-6 col-md-6  align-self-center blue-form" style="display:flex; justify-content:center;">

                @using (Html.BeginForm("EditProfile", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <h2>Edit your profile information</h2>
                    <br/>
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.UserId)
                        @Html.HiddenFor(model => model.ProfilePictureUrl)

                        <img class="smallerProfilePicture" alt="Your profile picture" src="@Url.Content(Model.ProfilePictureUrl)" id="ProfilePicture" />

                        <div class="row">
                            <div class="col-xs-4">
                                <h5 style="padding-top:5px; margin-bottom:2px;">Profile Picture</h5>
                                <br />
                                <h5>First Name</h5>
                                <br />
                                <h5>Last Name</h5>
                            </div>
                            <div class="col-xs-8" style="margin-top:10px;">
                                <input type="file" id="ImageUpload" name="ImageUpload" />
                                <br />
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                <br />
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="margin-top:40px; margin-bottom:30px;">
                            <div class="col-md-6" style="margin-bottom:10px;">
                                <a style="width:200px;" href="/Home" class="btn btn-primary btn-lg">Back to profile</a>
                            </div>
                            <div class="col-md-6">
                                <input style="width:200px;" id="submit" type="submit" value="Save Changes" class="btn btn-success btn-lg" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        </div>
    </div>
        @section Scripts{
            <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
            <script src="~/Scripts/App/imageUpload.js"></script>
        }



